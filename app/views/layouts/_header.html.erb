<header class="fixed bg-white shadow-md z-50 w-full px-5 py-3 flex justify-between items-center">
    <%= link_to "LameBook", root_path, class: "text-2xl text-blue-400" %>
    <div>
        <% if user_signed_in? %>
            <%= link_to "Create new post", posts_new_path, data: { turbo_frame: 'modal' }, remote: true, class: "px-6 py-2 text-blue-100 no-underline bg-blue-500 rounded hover:bg-blue-600 hover:underline hover:text-blue-200" %>
            <label class="text-blue-400 px-3 rounded py-1"><%= current_user.username %></label>
            <%= link_to "Sign out", destroy_user_session_path, data: { "turbo-method": :delete }, class: "text-blue-400 px-3 rounded py-1" %>
        <% else %>
            <%= link_to "Login", new_user_session_path, class: "text-blue-400 px-3 rounded py-1" %>
            <%= link_to "Sign Up", new_user_registration_path, class: "text-blue-400 px-3 rounded py-1" %>
        <% end %>
    </div>
</header>
<div class="h-24"></div>