<header class="fixed bg-blue-400 shadow-md  z-50 w-full px-5 py-2 flex justify-between items-center">
    <router-link to="/" class="text-2xl text-white">LameBook</router-link>
    <div>
        <% unless current_user.nil?%>
            <label class="text-white px-3 rounded py-1"><%= current_user.username %></label>
            <%= link_to "Sign out", destroy_user_session_path, data: { "turbo-method": :delete }, class: "text-white px-3 rounded py-1" %>
        <% else %>
            <%= link_to "Login", new_user_session_path, class: "text-white px-3 rounded py-1" %>
            <%= link_to "Sign Up", new_user_registration_path, class: "text-white px-3 rounded py-1" %>
        <% end %>
    </div>
</header>
<div class="h-24"></div>